{% extends 'base.html.twig' %}

{% block title %}All cards{% endblock %}

{% block body %}

	{# {{ dump (app.session.get('card_compilation') )}} #}
	{# {{ dump (app.session.get('counter') )}} #}
	{# {{ dump (app.session.get('correct_answers_count') )}} #}

	<section>
		<div class="textbox-allcards">
			{% if app.session.get('correct_answers_count') > 2 %}
			<h4>Congratulations! You got {{ app.session.get('correct_answers_count') }} out of 5 answers correct! 🎉</h4>
			{% endif %}
			
			{% if app.session.get('correct_answers_count') <= 2 %}
			<h4>You got {{ app.session.get('correct_answers_count') }} out of 5 answers correct.</h4>
			{% endif %}

			<h5>⬇️⬇️⬇️ Now, if you wish, take some time to learn more about the events, people, and works featured in this game. ⬇️⬇️⬇️</h5>
		</div>
	</section>
	<section>
		<div class="container">
			{# <div class="row"> #}
			<div class="row hidden-md-up">
				{% for card in card_compilation %}
				{# <div class="col-3 mb-3"> #}
				<div class="col-md-3 mb-3">
					<div class="card" style="width: 18.75rem;">
						<img src="{{ asset('images/' ~ card.image) }}" class="card-img-top photo-constraint">
						<div class="card-body fixed-height-allcards">
							<h5 class="card-title"><strong>{{ card.year }}</strong>: {{ card.title }}</h5>
							{# <p class="card-text">{{ card.description }}</p> #}
							<a href="{{ card.link }}" class="card-link" target="_blank">Link to Wikipedia article</a>
						</div>
					</div>
				</div>
				{% endfor %}
			</div>
		</div>
		<div class="container play-again">
			<a href="{{ path ("home") }}" id="play-again">➡️➡️➡️  CLICK HERE TO PLAY AGAIN  ⬅️⬅️⬅️</a>
		</div>
	</section>

{% endblock %}